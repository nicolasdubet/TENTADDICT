 <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking</h3>
        <%= simple_form_for [ @tent, @booking ] do |b| %>
          <%= b.input :start_date_book, label: "Select your start date for rent a tent:" %>
          <%= b.input :end_date_book, label: "Select an ending date:" %>
          <%= b.submit "Book this tent", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

